const form = document.querySelector(".form") const service = document.querySelector(".service") const wynik = document.querySelector(".wynik") const wyslij = document.querySelector(".wyslij") const clear = document.querySelector(".clear") form.addEventListener('submit',event=>{ let name = document.querySelector('.imie').value let last_name = document.querySelector('.nazwisko').value let e_mail = document.querySelector('.e-mail').value let service_type = document.querySelector('.service').value wynik.innerHTML=name+" "+last_name+"<br>"+e_mail+"<br>UsÅ‚uga: "+service_type }) clear.addEventListener('click',event=>{ wynik.innerHTML = '' })
